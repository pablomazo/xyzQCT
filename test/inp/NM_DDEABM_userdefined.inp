! quadratic potential for 3 atom system
! initial conditions: normal modes
! propagator: DDEABM
! potential: user defined
&input
nini=1 ! index of initial trajectory
ntrajs=1 ! index of final trajectory
nA=3 ! number of atoms in the system
potential_mode=0 ! potential mode to use: 0 => user defined PES
propagator_mode=0 ! propagator to use: 0 => DDEABM propagator
initcond_mode=1 ! how to setup initial conditions: 1 => normal modes initial conditions
rfin=1e20 ! Maximum distance between atoms before stoping propagation
tottime=200 ! Total propagation time
/

&systemA
atname(1) = "C" ! Atom name 1
atname(2) = "O" ! Atom name 2
atname(3) = "H" ! Atom name 3
xeq(1) = -0.529177249
xeq(7) = 1.587531747
/
